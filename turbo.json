{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**", 
        "!.next/cache/**", 
        "dist/**", 
        ".dist/**",
        "build/**", 
        "out/**",
        "apps/frontend/.next/**",
        "apps/http-backend/dist/**",
        "apps/ws-backend/dist/**",
        "packages/**/dist/**",
        "packages/**/.dist/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
